@model ShoppingCartExercise.Models.ItemModel
<a href="@Url.Action("ItemPage", "Experiment", new { inventory_type=Model.InvRef.Type, inventory_id=Model.InvRef.MyInventory.ID,slot_item=Model.ItemSlot,user_id=Model.InvRef.UserID})" style="text-decoration:none;color:black;">
    <div class="item-container" style="width:100%;height:100%;padding:10px;">
        <div class="item-image" width=5% height=5% style="background-color:white;"><img src="~/Content/Images/@Model.ItemInfo.ImagePath" style="max-height:100%;max-width:100%;" /></div>
        <div class="item-info" style="margin:auto;width:80%">
            <div class="item-name" style="text-align:center;margin:auto;padding-top:5px;"><h3>@Model.ItemInfo.Name</h3></div>
            <div class="item-description" style="overflow:hidden;text-overflow:ellipsis;text-align:center;margin:auto;padding-top:5px;height:20%;max-height:30%;max-width:100%;">@Model.ItemInfo.Description</div>
            <div class="item-stock-price" style="position:relative;margin:auto;padding-top:5px;">
                <div class="item-price" style="position:absolute;display:inline;left:30px">@Model.Price</div>
                <div class="item-stock" style="position:absolute;display:inline;right:30px;">@Model.Stock</div>
            </div>
        </div>
    </div>
</a>
